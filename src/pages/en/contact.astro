---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import Background from "@images/background.jpg";
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="py-20 w-full bg-etc-600 bg-blend-overlay">
    <div
      class="text-white flex flex-col text-left justify-center content-center w-[50vw] h-full px-12"
    >
      <h1 class="text-5xl font-bold mb-6">Contact</h1>
      <p class="text-xl mb-8">Get in touch with us</p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-gray-50 p-8 rounded-lg">
          <h2 class="text-2xl font-bold mb-6 text-etc-dark">Send a Message</h2>
          <form
            class="space-y-6"
            action="https://formspree.io/f/mzzgrplz"
            method="POST"
          >
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Full Name</label
              >
              <input
                type="text"
                id="name"
                name="name"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-etc-500 focus:border-etc-500"
                required
              />
            </div>
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg outline-none focus-ring-4 focus:ring-etc-500 focus:border-etc-500"
                required
              />
            </div>
            <div>
              <label
                for="phone"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Phone</label
              >
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-etc-500 focus:border-etc-500"
              />
            </div>
            <div>
              <label
                for="message"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Message</label
              >
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-etc-500 focus:border-etc-500"
                required></textarea>
            </div>
            <button
              type="submit"
              class="w-full bg-etc-500 text-white px-6 py-3 rounded-lg hover:bg-etc-600 transition-colors"
            >
              Send Message
            </button>
          </form>
        </div>
        <!-- Contact form -->

        <!-- Contact Information -->
        <div class="space-y-8">
          <div>
            <h2 class="text-2xl font-bold mb-6 text-etc-dark">
              Contact Information
            </h2>
            <div class="space-y-4">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                  <svg
                    class="w-6 h-6 text-etc-500"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-gray-900">Address</h3>
                  <p class="text-gray-600">
                    Ecotermcomplex Sp. z o.o.<br />Ul. Ozimina 18a<br />61-664
                    Pozna≈Ñ
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                  <svg
                    class="w-6 h-6 text-etc-500"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-gray-900">Phone</h3>
                  <p class="text-gray-600">+48 695 850 296</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                  <svg
                    class="w-6 h-6 text-etc-500"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-gray-900">Email</h3>
                  <p class="text-gray-600">biuro@ecotermcomplex.pl</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Map -->
          <div class="mt-8">
            <h2 class="text-2xl font-bold mb-6 text-etc-dark">Location</h2>
            <div class="aspect-w-16 aspect-h-9">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2432.891691416013!2d16.923419612598494!3d52.42676014301164!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47045b546f6711a7%3A0x2dae340e96dd3d34!2sOzimina%2018A%2C%2061-664%20Pozna%C5%84!5e0!3m2!1spl!2spl!4v1693133991318!5m2!1spl!2spl"
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                class="rounded-lg"></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
