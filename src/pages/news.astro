---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import Background from "@images/background.jpg";
---

<BaseLayout>
  <!-- Hero Section -->
  <section
    id="hero-section"
    class="h-[60vh] w-full bg-black/30 bg-blend-overlay"
  >
    <div
      class="text-white flex flex-col text-left justify-center content-center w-[50vw] h-full px-12"
    >
      <h1 class="text-5xl font-bold mb-6">Aktualności</h1>
      <p class="text-xl mb-8">Najnowsze informacje z branży biogazowej</p>
    </div>
  </section>

  <!-- News Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- News Item 1 -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="aspect-w-16 aspect-h-9">
            <img
              src="/images/news1.jpg"
              alt="Nowa instalacja biogazowa"
              class="object-cover w-full h-full"
            />
          </div>
          <div class="p-6">
            <div class="text-sm text-gray-500 mb-2">15 Marca 2024</div>
            <h3 class="text-xl font-bold mb-2 text-etc-dark">
              Nowa Instalacja Biogazowa w Wielkopolsce
            </h3>
            <p class="text-gray-600 mb-4">
              Zakończyliśmy realizację kolejnego projektu instalacji biogazowej
              w województwie wielkopolskim. Instalacja będzie przetwarzać odpady
              organiczne z lokalnych gospodarstw rolnych.
            </p>
            <a
              href="#"
              class="text-etc-500 hover:text-etc-600 font-medium inline-flex items-center"
            >
              Czytaj więcej
              <svg
                class="w-4 h-4 ml-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- News Item 2 -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="aspect-w-16 aspect-h-9">
            <img
              src="/images/news2.jpg"
              alt="Konferencja biogazowa"
              class="object-cover w-full h-full"
            />
          </div>
          <div class="p-6">
            <div class="text-sm text-gray-500 mb-2">1 Marca 2024</div>
            <h3 class="text-xl font-bold mb-2 text-etc-dark">
              Udział w Konferencji Biogazowej 2024
            </h3>
            <p class="text-gray-600 mb-4">
              Nasz zespół wziął udział w największej konferencji branży
              biogazowej w Polsce, prezentując najnowsze rozwiązania w zakresie
              optymalizacji produkcji biogazu.
            </p>
            <a
              href="#"
              class="text-etc-500 hover:text-etc-600 font-medium inline-flex items-center"
            >
              Czytaj więcej
              <svg
                class="w-4 h-4 ml-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- News Item 3 -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="aspect-w-16 aspect-h-9">
            <img
              src="/images/news3.jpg"
              alt="Certyfikacja"
              class="object-cover w-full h-full"
            />
          </div>
          <div class="p-6">
            <div class="text-sm text-gray-500 mb-2">15 Lutego 2024</div>
            <h3 class="text-xl font-bold mb-2 text-etc-dark">
              Nowe Certyfikaty Jakości
            </h3>
            <p class="text-gray-600 mb-4">
              Otrzymaliśmy nowe certyfikaty jakości potwierdzające najwyższe
              standardy w zakresie projektowania i realizacji instalacji
              biogazowych.
            </p>
            <a
              href="#"
              class="text-etc-500 hover:text-etc-600 font-medium inline-flex items-center"
            >
              Czytaj więcej
              <svg
                class="w-4 h-4 ml-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Pagination -->
      <div class="mt-12 flex justify-center">
        <nav class="flex items-center gap-2">
          <a
            href="#"
            class="px-4 py-2 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-50"
          >
            Poprzednia
          </a>
          <a
            href="#"
            class="px-4 py-2 bg-etc-500 text-white rounded-lg hover:bg-etc-600"
          >
            1
          </a>
          <a
            href="#"
            class="px-4 py-2 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-50"
          >
            2
          </a>
          <a
            href="#"
            class="px-4 py-2 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-50"
          >
            3
          </a>
          <a
            href="#"
            class="px-4 py-2 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-50"
          >
            Następna
          </a>
        </nav>
      </div>
    </div>
  </section>
</BaseLayout>
