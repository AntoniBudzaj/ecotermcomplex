---
const today = new Date();
---

<footer class="footer-main w-screen flex flex-col p-5 bg-gray-100">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Company Info -->
      <div class="flex flex-col">
        <h3 class="text-xl font-bold mb-4">EcoTermComplex</h3>
        <p class="text-gray-600 mb-2">Kompleksowe usługi termomodernizacyjne</p>
        <p class="text-gray-600">
          &copy; {today.getFullYear()} Wszelkie prawa zastrzeżone
        </p>
      </div>

      <!-- Quick Links -->
      <div class="flex flex-col">
        <h3 class="text-xl font-bold mb-4">Szybkie linki</h3>
        <nav class="flex flex-col gap-2">
          <a href="/about" class="text-gray-600 hover:text-gray-900">O nas</a>
          <a href="/services" class="text-gray-600 hover:text-gray-900"
            >Nasze usługi</a
          >
          <a href="/news" class="text-gray-600 hover:text-gray-900"
            >Aktualności</a
          >
          <a href="/contact" class="text-gray-600 hover:text-gray-900"
            >Kontakt</a
          >
          <a href="/etcheck" class="text-gray-600 hover:text-gray-900"
            >ETCheck</a
          >
        </nav>
      </div>

      <!-- Contact Info -->
      <div class="flex flex-col">
        <h3 class="text-xl font-bold mb-4">Kontakt</h3>
        <div class="flex flex-col gap-2 text-gray-600">
          <p>Email: kontakt@ecotermcomplex.pl</p>
          <p>Telefon: +48 XXX XXX XXX</p>
          <p>Adres: ul. Przykładowa 123, 00-000 Warszawa</p>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-main {
    border-top: 1px solid #e5e7eb;
  }
</style>
